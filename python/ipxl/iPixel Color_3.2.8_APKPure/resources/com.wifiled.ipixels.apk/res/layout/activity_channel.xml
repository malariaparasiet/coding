<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_channel_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/toolbar_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_channel_list"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_bottom"
        app:layout_constraintTop_toBottomOf="@+id/il_channel_toobar"/>
    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:src="@mipmap/nav_bottom_bg"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.wifiled.baselib.widget.TextDrawable
        android:textSize="@dimen/dp_15"
        android:gravity="center_vertical"
        android:id="@+id/iv_chl_sel_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/channel_list_sel_all"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_channel_list"
        app:leftDrawable="@drawable/selector_channel_iv_sel"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_channel_bottom_fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_channel_list"
        app:layout_constraintVertical_bias="0.85">
        <ImageView
            android:id="@+id/iv_channel_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_delete_default"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_channel_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread"/>
        <ImageView
            android:id="@+id/iv_channel_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/button_send_default"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_channel_del"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
