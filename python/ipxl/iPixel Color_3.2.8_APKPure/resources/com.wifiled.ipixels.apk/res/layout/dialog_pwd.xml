<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:background="@color/bottom_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@mipmap/dc_connect_pwd_frame"
        android:layout_width="270dp"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="35dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/device_pwd"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/ll_set_pwd_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_set_pwd_1"
                    android:background="@mipmap/dc_connect_pwd_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginHorizontal="4dp"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_set_pwd_2"
                    android:background="@mipmap/dc_connect_pwd_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_set_pwd_3"
                    android:background="@mipmap/dc_connect_pwd_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_set_pwd_4"
                    android:background="@mipmap/dc_connect_pwd_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_set_pwd_5"
                    android:background="@mipmap/dc_connect_pwd_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_set_pwd_6"
                    android:background="@mipmap/dc_connect_pwd_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_set_pwd_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/set_pwd_conncect"
                android:maxLines="2"
                android:layout_below="@+id/ll_set_pwd_1"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:background="@mipmap/dc_connect_bg_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_red_cancel"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/cancel"
                android:layout_weight="1"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_blue_cancel"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/sure"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#d6dadd"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp">
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_1"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_2"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_3"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="5dp">
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_4"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_5"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_6"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="5dp">
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_7"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_8"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_9"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:paddingHorizontal="5dp">
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/btn_key_bg"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_key_0"
                android:background="@drawable/btn_key_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <RelativeLayout
                android:id="@+id/rl_key_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/btn_key_bg"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_key_delete"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
