<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/player_icon_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_mic_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/toolbar_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/imageView2"
        android:background="@drawable/mic_rhythm_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/il_mic_toolbar"
        app:layout_constraintVertical_bias="0.2"/>
    <RelativeLayout
        android:id="@+id/rl_mic_root"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.wifiled.ipixels.view.ViewPagerAllResponse
            android:id="@+id/vp_mic_rhyhm"
            android:clipChildren="false"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_mic_rhy_image_bg"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/rhythm_mode_bg"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/rl_mic_rhy_bg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.wifiled.ipixels.view.RhythmLedView
            android:id="@+id/rhyledview_mic_1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.wifiled.ipixels.view.RhythmLedView
            android:id="@+id/rhyledview_mic_2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1px"
            android:layout_below="@+id/rhyledview_mic_1"
            android:rotationX="180"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
