<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/gallery_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_diy_image_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/toolbar_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ledview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/cl_bottoom_function"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_diy_image_toolbar">
        <ImageView
            android:id="@+id/imageView3"
            android:background="@drawable/diy_bg"
            android:visibility="invisible"
            android:layout_width="960px"
            android:layout_height="960px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.wifiled.ipixels.view.LedView
            android:id="@+id/ledView"
            android:layout_width="5dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:id="@+id/rl_128bg"
            android:background="@mipmap/diy_32_128_bg"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/ledView"
            app:layout_constraintEnd_toEndOf="@+id/ledView"
            app:layout_constraintStart_toStartOf="@+id/ledView"
            app:layout_constraintTop_toTopOf="@+id/ledView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottoom_function"
        android:background="@mipmap/icon_diy_imag_bg2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_ledview">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_flow_first"
            android:background="@mipmap/icon_diy_imag_bg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread">
            <ImageView
                android:id="@+id/btn_vertical_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_icon_diy_vertical"/>
            <ImageView
                android:id="@+id/btn_horizontal_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_icon_diy_horizontal"/>
            <ImageView
                android:id="@+id/btn_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_diy_image_redo"/>
            <ImageView
                android:id="@+id/btn_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_diy_image_undo"/>
            <ImageView
                android:id="@+id/btn_move_painted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_icon_diy_move_inside_painted"/>
            <ImageView
                android:id="@+id/btn_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/import_default"/>
            <ImageView
                android:id="@+id/btn_select"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                app:constraint_referenced_ids="btn_undo,btn_redo,btn_horizontal_mirror,btn_vertical_mirror,         btn_move_painted,btn_import"
                app:flow_wrapMode="chain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/recyclerview_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/cl_diy_color_set"
            app:layout_constraintTop_toBottomOf="@+id/cl_flow_first"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_diy_color_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom1"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview_color">
            <RelativeLayout
                android:id="@+id/rl_outside_diycolor_frame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.wifiled.ipixels.view.customview.CustomImageView
                    android:id="@+id/iv_show_diycolor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_centerInParent="true"/>
                <View
                    android:background="@drawable/corners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <com.wifiled.ipixels.view.ColorBarView
                android:id="@+id/colorBarView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:barHeight="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rl_outside_diycolor_frame"
                app:layout_constraintTop_toTopOf="parent"
                app:thumbHeight="36dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/ll_bottom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="        btn_move_outside_bg,btn_decrease,tv_scale_value,btn_increase, iv_diy_anim_clear,btn_select        ,btn_eraser,btn_paint"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_diy_color_set"/>
        <ImageView
            android:id="@+id/iv_diy_anim_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_diy_clear"/>
        <ImageView
            android:id="@+id/btn_move_outside_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_icon_diy_move_outside_bg"/>
        <ImageView
            android:id="@+id/btn_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_diy_increase"/>
        <TextView
            android:id="@+id/tv_scale_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>
        <ImageView
            android:id="@+id/btn_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_diy_decrease"/>
        <ImageView
            android:id="@+id/btn_paint"
            android:background="@drawable/selector_diy_paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btn_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_icon_diy_erase"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
