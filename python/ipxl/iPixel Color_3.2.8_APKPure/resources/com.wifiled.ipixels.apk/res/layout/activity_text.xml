<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_text_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Barrier
        android:orientation="horizontal"
        android:id="@+id/barrier_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="il_text_toolbar,ll,iv_text_send"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_text_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/toolbar_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/iv_text_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_text_click"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/il_text_toolbar"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_text_mode">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2"
            android:layout_marginHorizontal="18dp">
            <com.wifiled.baselib.widget.NoNewLineEditText
                android:textSize="15sp"
                android:gravity="start|top"
                android:id="@+id/test_edit"
                android:background="@drawable/text_inputbox"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_text"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:paddingStart="20dp"
                android:paddingEnd="@dimen/dp_15"/>
            <TextView
                android:textSize="15sp"
                android:textColor="#c8bfbf"
                android:id="@+id/tv_fontlimit_in_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="@+id/test_edit"
                app:layout_constraintEnd_toEndOf="@+id/test_edit"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_menu_tab"
            android:background="@mipmap/navigation_background"
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/vp_sel_bgcolor"
                android:gravity="center"
                android:id="@+id/tv_menu_attr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/attributes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_menu_effect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintVertical_chainStyle="spread"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/vp_nosel_bgcolor"
                android:gravity="center"
                android:id="@+id/tv_menu_effect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/special_effects"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_menu_rec"
                app:layout_constraintStart_toEndOf="@+id/tv_menu_attr"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/vp_nosel_bgcolor"
                android:gravity="center"
                android:id="@+id/tv_menu_rec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/record"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_menu_effect"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/gl_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_end="741dp"/>
    <RelativeLayout
        android:id="@+id/rl_hide_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_edit_outframe_in_attr"
        app:layout_constraintTop_toBottomOf="@+id/gl_middle"/>
    <ImageView
        android:id="@+id/iv_text_send"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/text_send_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_edit_outframe_in_attr"
        android:background="@drawable/shape_textinput_outframe_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_edit_kb_in_attr"
            android:background="@drawable/selector_text_keyboard_change"
            android:layout_width="205dp"
            android:layout_height="51dp"
            app:layout_constraintBottom_toTopOf="@+id/view_textinput_middle"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.wifiled.ipixels.view.customview.CustomImageView
                android:id="@+id/iv_kb_in_attr"
                android:background="@drawable/text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintGuide_begin="206dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_edit_in_attr"
            android:background="@drawable/selector_text_emoj_change"
            android:layout_width="205dp"
            android:layout_height="51dp"
            app:layout_constraintBottom_toTopOf="@+id/view_textinput_middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="parent">
            <com.wifiled.ipixels.view.customview.CustomImageView
                android:id="@+id/iv_emoji_in_attr"
                android:background="@drawable/emoji_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view_textinput_middle"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/cl_kb_emoj_bottom"
            app:layout_constraintTop_toBottomOf="@+id/cl_edit_in_attr"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_kb_emoj_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_textinput_middle">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_input_in_attr"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:visibility="visible"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/view_textmain_keyboard"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
